{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@websites/common": ["packages/common/src/index.ts"],
      "@websites/shared/react": ["packages/shared/react/src/index.ts"],
      "@websites/shared/react/server": ["packages/shared/react/src/server.ts"],
      "shadcn": ["packages/shadcn/src/index.ts"],
      "shadcn-utils": ["packages/shadcn-utils/src/index.ts"],
      "shadcn-utils/*": ["packages/packages/shadcn-utils/src/*"],
      "shadcn/*": ["packages/packages/shadcn/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
