// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Websites",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces",
  "features": {
    "ghcr.io/devcontainers-contrib/features/nx-npm:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "lts"
    },
    "ghcr.io/devcontainers-contrib/features/vercel-cli:1": {
      "version": "latest"
    },
    "ghcr.io/lumenpink/devcontainer-features/bun:0": {}
  },
  "forwardPorts": [5555],
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot-nightly",
        "github.copilot-chat",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "nrwl.angular-console",
        "csstools.postcss",
        "bradlc.vscode-tailwindcss",
        "github.vscode-pull-request-github",
        "codeandstuff.package-json-upgrade",
        "graphite.gti-vscode",
        "oven.bun-vscode",
        "stivo.tailwind-fold"
      ]
    }
  },
  "remoteUser": "node",
  "containerUser": "node",
  "postCreateCommand": "bash /workspaces/websites/.devcontainer/post-create.sh"
}
