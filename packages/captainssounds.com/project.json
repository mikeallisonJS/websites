{
  "name": "captainssounds.com",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/captainssounds.com",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/captainssounds.com"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/captainssounds.com"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "captainssounds.com:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "captainssounds.com:build:development",
          "dev": true,
          "turbo": true
        },
        "production": {
          "buildTarget": "captainssounds.com:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "captainssounds.com:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/captainssounds.com/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "fetch-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "doppler secrets download --no-file --format=env-no-quotes -p captainssounds-com > packages/captainssounds.com/.env"
          }
        ]
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "npx prisma generate --schema packages/captainssounds.com/db/schema.prisma"
        ]
      }
    },
    "prisma-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash -c 'npx prisma migrate dev --schema packages/captainssounds.com/db/schema.prisma --name `date +\"%Y%m%d%H%M%S\"`'"
        ]
      },
      "configurations": {
        "production": {
          "commands": [
            "npx prisma migrate deploy --schema packages/captainssounds.com/db/schema.prisma"
          ]
        }
      }
    },
    "prisma-reset": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma migrate reset --schema packages/captainssounds.com/db/schema.prisma --force"
        ]
      }
    },
    "prisma-seed": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node packages/captainssounds.com/db/seed.mjs"]
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma studio --schema packages/captainssounds.com/db/schema.prisma"
        ]
      }
    },
    "prisma-validate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma validate --schema packages/captainssounds.com/db/schema.prisma"
        ]
      }
    }
  }
}
